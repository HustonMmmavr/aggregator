<% provide(:title, 'Add film') %>
<h1 class="col-md-12 col-xs-12">Add film</h1>

<div class="row">
  <% if @err != nil %>
    <% if @err.size != 0 %>
    <div class="col-md-4 col-md-offset-4">
      <% for e in @err %>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong><%= e %></strong>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>

  <div class="col-md-4 col-md-offset-4" data toggle="validator">
    <%= form_for @film, {:url => :add_film_post, :html => {:class => "form-group", 'data-toggle' => "validator"}} do |f| %>

      <div class="form-group  field_input top_margin col-md-12">
        <%= f.label :filmTitle, "Title", class:  "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.text_field :filmTitle,  class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>


      <div class="form-group field_input col-md-12">
        <%= f.label :filmDirector, "Director", class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.text_field :filmDirector, class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
        <%= f.label :filmYear, "Year", class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.text_field :filmYear, class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
        <%= f.label :filmLength, "Length",  class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.text_field :filmLength, class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
      <%= f.label :filmAbout, "About",  class: "col-md-3 control-label padding_label" %>
      <div class="col-md-9">
        <%= f.text_field :filmAbout, class: "col-md-12 form-control", :required => true  %>
      </div>
      <div class="help-block with-errors"> </div>
    </div>

      <div class="col-md-12 col-xs-12 pad0 upload-img-div">
        <%= image_tag "films/nothing.png", id: "img_signup_settings", class: "upload-img" %>
      </div>

      <div class="form-group  field_input col-md-12">
        <%= f.label :filmImage, "Image", class:  "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <label class="upload file-upload filebordered" id="fff" for="film_filmImage">
            <mark class="pad0"></mark><span class="btn btn-success btnfileupload">Upload</span>
            <%= f.file_field :filmImage, class: "col-md-12 form-control", style: "display: none;"  %>
          </label>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <%= f.submit "Add new film", class: "btn btn primary col-md-12" %>
   </div>
    <% end %>
  </div>
</div>
