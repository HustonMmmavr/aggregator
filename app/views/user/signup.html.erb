<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <%= @err.count %>
  <% if @user != nil && @err != nil %>
    <% if @err.count > 0 %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <% for e in @err %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong><%= e %></strong>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="col-md-4 col-md-offset-4">
  <%= bootstrap_form_for(@user, {:url => :signup}) do |f| %>
    <%= f.text_field :userName, label: "Nickname" %>

    <%= f.email_field :userEmail, label: "Email" %>
    <%= f.password_field :userPassword, label: "Password" %>
    <%= f.password_field :repeatPassword, label: "Confirm" %>
    <%= f.text_field :userAbout, label: "About" %>
    <%= f.file_field :userImage, label: "data" %>
    <%= f.submit "Log In", class: "col-md-12" %>
    <% end %>

  </div>
</div>
