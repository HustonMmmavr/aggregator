<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user, {:url => :signup}) do |f| %>
      <div class="field_input top_margin col-md-12">
        <%= f.label :userName, class:  "col-md-3 padding_label" %>
        <%= f.text_field :userName, class: "col-md-9" %>
      </div>

      <div class="field_input col-md-12">
        <%= f.label :uesrEmail, class:  "col-md-3 padding_label" %>
        <%= f.email_field :userEmail, class: "col-md-9" %>
      </div>

      <div class="field_input col-md-12">
        <%= f.label :userPassword, class:  "col-md-3 padding_label" %>
        <%= f.password_field :userPassword, class: "col-md-9" %>
      </div>

      <div class="field_input col-md-12">
        <%= f.label :repeatPassword, "Confirmation", class:  "col-md-3 padding_label" %>
        <%= f.password_field :repeatPassword, class: "col-md-9" %>
      </div>

      <%= f.submit "Create my account", class: "btn btn-primary col-md-12" %>
    <% end %>
  </div>
</div>
