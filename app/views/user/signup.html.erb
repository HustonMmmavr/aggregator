<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <% if @err != nil %>
    <% if @err.size != 0 %>
    <div class="col-md-4 col-md-offset-4">
      <% for e in @err %>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong><%= e %></strong>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>

  <div class="col-md-4 col-md-offset-4">
    <%= bootstrap_form_for(@user, {:url => :signup_ui_post}) do |f| %>
      <%= f.text_field :userName, label: "Nickname" %>
      <%= f.email_field :userEmail, label: "Email" %>
      <%= f.password_field :userPassword, label: "Password" %>
      <%= f.password_field :repeatPassword, label: "Confirm" %>
      <%= f.text_field :userAbout, label: "About" %>
      <%= f.file_field :userImage, label: "data" %>
      <%= f.submit "Log In", class: "col-md-12" %>
    <% end %>
  </div>
</div>
