<% provide(:title, 'Sign up') %>
<h1 class="col-md-12 col-xs-12">Sign up</h1>

<div class="row">
  <% if @err != nil %>
    <% if @err.size != 0 %>
    <div class="col-md-4 col-md-offset-4">
      <% for e in @err %>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong><%= e %></strong>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>

  <div class="col-md-4 col-md-offset-4" data toggle="validator">
    <%= form_for @user, {:url => :signup_ui_post, :html => {:class => "form-group", 'data-toggle' => "validator"}} do |f| %>

      <div class="form-group  field_input top_margin col-md-12">
        <%= f.label :userName, "Name", class:  "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.text_field :userName,  class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
        <%= f.label :userEmail, "Email", class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.email_field :userEmail, class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
        <%= f.label :userPassword, "Password", class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.password_field :userPassword, class: "col-md-12 form-control", :required => true, 'data-minlength'=> 6  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
        <%= f.label :repeatPassword, "Confirm",  class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.password_field :repeatPassword, class: "col-md-12 form-control", :required => true, 'data-minlength'=> 6  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="col-md-12 col-xs-12 pad0 upload-img-div">
        <%= image_tag "noavatar.jpg", id: "img_signup_settings", class: "upload-img" %>
      </div>

      <div class="form-group  field_input col-md-12">
        <%= f.label :userImage, "Image", class:  "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <label class="upload file-upload filebordered" id="fff" for="user_userImage">
            <mark class="pad0"></mark><span class="btn btn-success btnfileupload">Upload</span>
            <%= f.file_field :userImage, class: "col-md-12 form-control", style: "display: none;"  %>
          </label>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <%= f.submit "Create my account", class: "btn btn primary col-md-12" %>
   </div>
    <% end %>
  </div>
</div>
